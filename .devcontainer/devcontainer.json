{
  "name": "Python 3",
  // use the default python image
  // VScode extensions
  "extensions": [
    "ms-python.python",
    "ms-toolsai.jupyter"
  ],
  // set default python path
  "settings": {
    "python.defaultInterpreterPath": "/usr/local/bin/python"
  },
  // install libs after the creation of the environment 
  "postCreateCommand": "pip install numpy pandas matplotlib"
}
